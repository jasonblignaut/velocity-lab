{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./public/functions",
    "rootDir": "./functions",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["functions/**/*.ts"]
}